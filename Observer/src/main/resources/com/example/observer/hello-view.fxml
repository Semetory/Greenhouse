<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.effect.PerspectiveTransform?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.observer.HelloController">

    <top>
        <Label text="Панель управления сервером времени"
               style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: linear-gradient(to right, #2196F3, #4CAF50);">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <effect>
                <PerspectiveTransform uly="-5" urx="400" ury="5"
                                      lrx="380" lry="40" llx="20" lly="30">
                    <input>
                        <DropShadow radius="5.0" offsetX="3.0" offsetY="3.0"
                                    color="rgba(0, 0, 0, 0.5)"/>
                    </input>
                </PerspectiveTransform>
            </effect>
        </Label>
    </top>

    <center>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <!-- Компонент 1 с DropShadow -->
            <VBox spacing="15" prefWidth="380" prefHeight="300"
                  style="-fx-border-color: gray; -fx-border-width: 2; -fx-padding: 20;
             -fx-background-color: #f0f8ff; -fx-border-radius: 5; -fx-background-radius: 5;">

                <effect>
                    <DropShadow offsetX="5" offsetY="5" color="rgba(0,0,0,0.3)"/>
                </effect>

                <Label text="Рабочая панель компонента 1"
                       style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: #2196F3;"/>

                <Label fx:id="timeLabel" text="Прошло 0 секунд"
                       style="-fx-font-size: 20pt; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                <Separator style="-fx-padding: 10 0;"/>

          </VBox>

          <!-- Компонент 2 -->
            <VBox spacing="15" prefWidth="380" prefHeight="300"
                  style="-fx-border-color: gray; -fx-border-width: 2; -fx-padding: 20;
             -fx-background-color: #fff0f5; -fx-border-radius: 5; -fx-background-radius: 5;">

                <effect>
                    <DropShadow offsetX="5" offsetY="5" color="rgba(204, 51, 51, 0.3)"/>
                </effect>

                <Label text="Рабочая панель компонента 2"
                       style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: #E91E63;"/>

                <Label text="Музыкальный проигрыватель"
                       style="-fx-font-size: 14pt; -fx-text-fill: #9C27B0;"/>

                <Separator style="-fx-padding: 10 0;"/>

                <Label text="Панель инструментов компонента 2"
                       style="-fx-font-weight: bold; -fx-font-size: 12pt;"/>

                <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button text="ВКЛ" fx:id="comp2StartBtn"
                            prefWidth="130" prefHeight="45"
                            style="-fx-font-size: 14pt; -fx-font-weight: bold;
                       -fx-background-color: #9C27B0; -fx-text-fill: white;
                       -fx-background-radius: 5;"/>

                    <Button text="ВЫКЛ" fx:id="comp2StopBtn"
                            prefWidth="130" prefHeight="45"
                            style="-fx-font-size: 14pt; -fx-font-weight: bold;
                       -fx-background-color: #673AB7; -fx-text-fill: white;
                       -fx-background-radius: 5;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                    <Label text="Интервал:"
                           style="-fx-font-size: 12pt; -fx-font-weight: bold;"/>
                    <Label fx:id="comp2IntervalLabel" text="10 сек"
                           style="-fx-font-size: 14pt; -fx-font-weight: bold; -fx-text-fill: #FF5722;"/>
                </HBox>
            </VBox>

            <!-- Компонент 3 -->
            <VBox spacing="15" prefWidth="380" prefHeight="300"
                  style="-fx-border-color: gray; -fx-border-width: 2; -fx-padding: 20;
             -fx-background-color: #f0fff0; -fx-border-radius: 5; -fx-background-radius: 5;">

                <effect>
                    <DropShadow offsetX="5" offsetY="5" color="rgba(25, 127, 229, 0.3)"/>
                </effect>

                <Label text="Рабочая панель компонента 3"
                       style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: #1976D2;"/>

                <AnchorPane prefHeight="80" style="-fx-padding: 10 0;">
                    <Circle fx:id="animationCircle" radius="45"
                            fill="radial-gradient(center 50% 50%, radius 60%, #4CAF50, #2196F3)"
                            AnchorPane.leftAnchor="10" AnchorPane.topAnchor="20">  <!-- 10 у.е. от левой кромки -->
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.3)"/>
                        </effect>
                    </Circle>
                </AnchorPane>

                <Separator style="-fx-padding: 10 0;"/>

                <Label text="Панель инструментов компонента 3"
                       style="-fx-font-weight: bold; -fx-font-size: 12pt;"/>

                <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button text="ЗАПУСК" fx:id="comp3StartBtn"
                            prefWidth="130" prefHeight="45"
                            style="-fx-font-size: 14pt; -fx-font-weight: bold;
                       -fx-background-color: #2196F3; -fx-text-fill: white;
                       -fx-background-radius: 5;"/>

                    <Button text="СТОП" fx:id="comp3StopBtn"
                            prefWidth="130" prefHeight="45"
                            style="-fx-font-size: 14pt; -fx-font-weight: bold;
                       -fx-background-color: #03A9F4; -fx-text-fill: white;
                       -fx-background-radius: 5;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                    <Label text="Интервал:"
                           style="-fx-font-size: 12pt; -fx-font-weight: bold;"/>
                    <Label fx:id="comp3IntervalLabel" text="20 сек"
                           style="-fx-font-size: 14pt; -fx-font-weight: bold; -fx-text-fill: #009688;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20"
              style="-fx-background-color: linear-gradient(to right, #ece9e6, #ffffff); -fx-padding: 10;">
            <effect>
                <DropShadow offsetY="-3.0" color="rgba(0, 0, 0, 0.3)">
                    <!--Тень снизу для панели управления-->
                </DropShadow>
            </effect>
            <Button text="Старт сервера" fx:id="serverStartBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: black;"/>
            <Button text="Стоп сервера" fx:id="serverStopBtn" style="-fx-background-color: #f44336; -fx-text-fill: black;"/>
            <Button text="Сброс времени" fx:id="serverResetBtn" style="-fx-background-color: #2196F3; -fx-text-fill: black;"/>
            <Label fx:id="serverStatusLabel" text="Сервер не активен" style="-fx-font-weight: bold;"/>
            <Label fx:id="currentTimeLabel" text="Время: 0 сек" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>